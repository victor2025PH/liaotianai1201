# 这是一个示例文件，实际使用时需要创建真实的 Secret
# 创建方式：
# kubectl create secret generic group-ai-secrets \
#   --from-literal=telegram-api-id='YOUR_API_ID' \
#   --from-literal=telegram-api-hash='YOUR_API_HASH' \
#   --from-literal=openai-api-key='YOUR_OPENAI_KEY' \
#   --from-literal=jwt-secret='YOUR_JWT_SECRET' \
#   --from-literal=admin-email='admin@example.com' \
#   --from-literal=admin-password='YOUR_PASSWORD' \
#   --from-literal=database-url='postgresql://user:pass@postgres-service:5432/dbname' \
#   --from-literal=telegram-bot-token='YOUR_BOT_TOKEN' \
#   --from-literal=telegram-chat-id='YOUR_CHAT_ID' \
#   --namespace=group-ai

apiVersion: v1
kind: Secret
metadata:
  name: group-ai-secrets
  namespace: group-ai
type: Opaque
stringData:
  # Telegram API 配置
  TELEGRAM_API_ID: "YOUR_API_ID"
  TELEGRAM_API_HASH: "YOUR_API_HASH"
  
  # OpenAI API 配置
  OPENAI_API_KEY: "YOUR_OPENAI_KEY"
  
  # JWT 配置
  JWT_SECRET: "YOUR_STRONG_RANDOM_SECRET_HERE"
  
  # 管理员账户
  ADMIN_DEFAULT_EMAIL: "admin@example.com"
  ADMIN_DEFAULT_PASSWORD: "YOUR_STRONG_PASSWORD"
  
  # 数据库连接
  DATABASE_URL: "postgresql://user:password@postgres-service:5432/group_ai"
  
  # Telegram 告警配置
  TELEGRAM_BOT_TOKEN: "YOUR_BOT_TOKEN"
  TELEGRAM_CHAT_ID: "YOUR_CHAT_ID"
  
  # Session 加密配置（可选）
  SESSION_ENCRYPTION_ENABLED: "false"
  SESSION_ENCRYPTION_KEY: ""
  SESSION_ENCRYPTION_PASSWORD: ""

